{# Prepare attributes #}
{% set prefix = 'quicklink-cards' %}

{% set classes = [
  'section',
  'container',
  prefix,
  prefix ~ '--' ~ variant,
] %}

<div {{ attributes.addClass(classes) }}">
  <ul class="quicklink-cards">
    {% for item in items %}
      <li class="quicklink-cards item">
        {{ pattern('quicklink_card', item, variant) }}
      </li>
    {% endfor %}
  </ul>
</div>
